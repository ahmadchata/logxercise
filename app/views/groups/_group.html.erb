<div class="container">
  <h4>Groups</h4>
  <div class="row">
    <% @groups.each do |g| %>
    <div class="card mb-4 shadow" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-3">
          <%= image_tag g.display_image if g.image.attached? %>
        </div>
      <div class="col-md-9">
      <div class="card-body">
        <h5 class="card-title"><%= g.name %></h5>
        <p class="card-text"><small class="text-muted"><%= g.created_at.strftime("%d %b. %Y") %></small></p>
      </div>
    </div>
  </div>
  </div>
    <% end %>
  <div><%= link_to "Create new group", new_group_path, class: "btn btn-success wide" %></div>
</div>
